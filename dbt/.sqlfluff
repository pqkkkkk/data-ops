[sqlfluff]
dialect = tsql
templater = dbt
# Disable all rules that bronze models violate
exclude_rules = CP02, AL01, LT01, LT02, LT05, LT12, ST03, ST06, RF01, RF04, PRS
max_line_length = 120

[sqlfluff:rules]
# Allow any identifier casing
capitalisation.identifiers.unquoted = any
# Allow implicit table aliasing
aliasing.table = any
# Don't enforce trailing whitespace rules
layout.spacing = false
# Don't enforce newline at end of file
layout.end_of_file = false
